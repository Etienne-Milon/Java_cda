package metier;

import java.math.BigDecimal;

public class Calculs {

	String operande1;
	String operande2;
	String operateur;
	public String stackInput = "";

	public void setOperande1(String operande1) {
		this.operande1 = operande1;
	}

	public void setOperande2(String operande2) {
		this.operande2 = operande2;
	}

	public void setOperateur(String operateur) {
		this.operateur = operateur;
	}

	public Calculs(String operande1, String operande2, String operateur) {
		super();
		this.operande1 = operande1;
		this.operande2 = operande2;
		this.operateur = operateur;
		String nombre1 = "";
	}

	public void setTouche() {};

	public String getNombre(String string) {
		boolean operator = false;
		while (!operator) {
			try {
				incrementNombre(string);
			} catch (Exception e) {
				if ("+-*/".contains(string)) {
					setOperateur(string);
					operator = true;
				}
			}
		}
		return stackInput;
	}

	private void incrementNombre(String string) {
		String temp = stackInput + string;
		BigDecimal bigDec = new BigDecimal(temp);
		stackInput = stackInput + string; // Ne marche pas a priori
	}

}
