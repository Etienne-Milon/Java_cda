package metier;

import java.text.DecimalFormat;
import javafx.scene.control.TextField;

public class CalcIMC {
	
	Double poids;
	Double taille;
	Double imc; 
	
	public CalcIMC(TextField poids, TextField taille) {
		super();
		
		this.poids = Double.parseDouble(poids.getText());
		this.taille = Double.parseDouble(taille.getText());
		//boolean normal = false;
		
	}

	
	public String CalculerIMC () {	
		imc = poids/(taille*taille);
		DecimalFormat df = new DecimalFormat("###.##");
		return String.valueOf(df.format(imc));
	} 
	
	public int getRange() {
		int range = -1;
		if (imc < 16.5)
			range = 1;
		else if(imc <17.5)
			range = 2;
		else if (imc <23)
			range = 3;
		else if (imc <27)
			range = 4;
		else if (imc <33)
			range = 5;
		else if (imc <37)
			range = 6;
		else if (imc <40)
			range = 7;
		else 
			range =8;
		return range;
			}
	
	public String ecrireComment() {
		String[] tablComm = {"Dénutrition","Maigre","Dans la norme","Surpoids","Obesité modérée","Obesité sévère","Obesité massive","Let's go champion !"};
		return String.format("range = %s",tablComm[getRange()-1]);
	}
}
